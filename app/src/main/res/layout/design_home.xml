<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable
            name="self"
            type="com.wind.vpn.design.HomeDesign" />
        <variable
            name="clashRunning"
            type="boolean" />
        <variable
            name="forwarded"
            type="String" />
        <variable
            name="mode"
            type="String" />
        <variable
            name="profileName"
            type="String" />
        <variable
            name="colorClashStarted"
            type="int" />
        <variable
            name="colorClashStopped"
            type="int" />
        <variable
            name="hasProviders"
            type="boolean" />

        <import type="android.view.View" />
        <import type="com.wind.vpn.design.HomeDesign.Request" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_home_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.wind.vpn.widget.TopBarHome
                android:id="@+id/top_bar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/notice_view"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/shaper_bg_notice"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar_view">
                <TextView
                    style="@style/TextNormalStyle.Bold.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/every_play" />
                <RelativeLayout
                    android:id="@+id/icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_connect_info"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/notice_view">
                <TextView
                    android:id="@+id/tv_connect_info"
                    style="@style/TextSmallStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Network: automatic" />
                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_width="32dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_gift" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_connect"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@{clashRunning? @drawable/icon_close : @drawable/icon_open}"
                android:onClick="@{()->self.request(Request.ToggleStatus)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#ffffff"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:outlineSpotShadowColor="#e0000000"
                app:layout_constraintBottom_toBottomOf="parent">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:id="@+id/tv_remain_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        style="@style/TextNormalStyle.Bold.Big.Blue"/>
                    <TextView
                        android:id="@+id/tv_remain_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_alignBottom="@id/tv_remain_time"
                        android:layout_toRightOf="@id/tv_remain_time"
                        style="@style/TextSmallStyle"
                        android:text="minutes expire"/>
                    <TextView
                        android:id="@+id/tv_remain_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_remain_time"
                        android:layout_marginTop="1dp"
                        style="@style/TextSmallStyle"
                        android:text="Account has expired"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_renewal"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shaper_blue"
                    android:gravity="center"
                    android:text="@string/renewal"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.wind.vpn.widget.DrawerView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ffffff" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>