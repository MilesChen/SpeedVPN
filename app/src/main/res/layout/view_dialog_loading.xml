<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shaper_bg_white">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_loading"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_loading"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_loading_dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_loading"
            android:layout_marginTop="10dp"
            android:text="@string/toast_loading"
            style="@style/TextSmallStyle"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>