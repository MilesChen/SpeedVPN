<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_home_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.wind.vpn.widget.TopBar
        android:id="@+id/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/top_bar_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:text="Miles UserName"
        style="@style/TextTitleStyle.UserName"
        />
    <TextView
        android:id="@+id/tv_user_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="4dp"
        android:text="user password376437261"
        style="@style/TextSmallStyle"/>

    <ImageView
        android:id="@+id/iv_pwd_show"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingLeft="7dp"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp"
        app:layout_constraintTop_toTopOf="@id/tv_user_pwd"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_pwd"
        app:layout_constraintLeft_toRightOf="@id/tv_user_pwd"
        android:src="@drawable/icon_password_hide"/>

    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shaper_bg_white"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar">
        <com.wind.vpn.widget.MenuView
            android:id="@+id/view_member_level"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <com.wind.vpn.widget.MenuView
            android:id="@+id/view_remain_time"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <com.wind.vpn.widget.MenuView
            android:id="@+id/device"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
